---
interface Props {
	href: string;
	label: string;
	target: string;
}

const { href, label, target } = Astro.props;
---

<a class="group flex items-center" href={href} target={target} aria-label={label}>
	<div class="flex ring-1 ring-gray-200 rounded-full group-hover:bg-white group-hover:ring-white p-1">
		<slot />
	</div>
</a>

