---
import "../styles/global.css";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" href="/favicon.svg" />
        <meta name="description" content="{description}" />
        <meta property="og:title" content="{title}" />
        <meta property="og:description" content="{description}" />
        <title>{title}</title>
        <meta name="theme-color" content="#000000" />
    </head>
    <body class="m-auto flex h-full max-w-prose flex-col justify-between gap-12 bg-neutral-900">
        <main class="px-4 py-12 lg:py-24 2xl:py-32">
            <slot />
        </main>
        <footer class="flex h-16 flex-col items-center justify-center">
            <span class="text-center text-sm font-normal text-neutral-50 opacity-50"
                >Made with ❤️ by <a
                    class="underline transition ease-in-out hover:text-cyan-200 hover:opacity-100"
                    href="https://twitter.com/DanceParty_">Keevan</a
                >.</span
            >
            <span class="mt-1 text-center text-xs font-normal text-neutral-50 opacity-25"
                >Site design inspired by <a
                    class="underline transition ease-in-out hover:text-cyan-200 hover:opacity-100"
                    href="https://twitter.com/Gavmn">Gavin Nelson</a
                >.</span
            >
        </footer>
    </body>
</html>
